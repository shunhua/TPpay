{#include file="Public/header" /#}
{#include file="Public/top" /#}
<div id="main">
    <div class="container-fluid">
        <div class="row">
            {#include file="Public/left" /#}
            <div class="col-md-10">
            <div class="right-content">
    
    <div class="panel panel-default">
        <div class="panel-heading">
            {#$pageName#}
        </div>
        <div class="panel-body">
            <form class="layui-form form-container form-ajax form-horizontal" action="{#:U('Agent/save')#}" method="post">
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        代理名称：
                    </label>
                    <div class="col-md-4">
                        <input type="text" class="form-control"  name="dlname" value="{#$edit.dlname#}" required lay-verify="required" placeholder="请输入代理名称" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        达到金额：
                    </label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="money" value="{#$edit.money#}" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        代理费率：
                    </label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="fl" value="{#$edit.fl#}" />
                        *例如费率0.5%这里输入0.5
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4">
                         <input type="hidden" class="form-control" name="act" value="{#$act#}"/>
                         <input type="hidden" class="form-control" name="dlid" value="{#$edit.dlid#}"/>
                        <button type="submit" class="btn btn-success ">
                            &nbsp;
                            <span class="glyphicon glyphicon-save">
                            </span>
                            &nbsp;提交&nbsp;
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
        </div>
    </div>
        </div>
    </div>
</div>
{#include file="Public/footer" /#} 