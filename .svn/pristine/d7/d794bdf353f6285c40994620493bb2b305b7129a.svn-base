{#include file="Public/header" /#}
{#include file="Public/top" /#}
<div id="main">
    <div class="container-fluid">
        <div class="row">
            {#include file="Public/left" /#}
            <div class="col-md-10">
            <div class="right-content">
    
    <div class="panel panel-default">
        <div class="panel-heading">
            {#$pageName#}
        </div>
        <div class="panel-body">
            <form class="layui-form form-container form-ajax form-horizontal" action="{#:U('Alipay/save')#}" method="post">
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        appid：
                    </label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="appid" value="{#$edit.appid#}" required lay-verify="required" placeholder="请输入开放平台appid" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        private：
                    </label>
                    <div class="col-md-4">
                        <textarea cols="50" rows="10" class="form-control" name="private"  required lay-verify="required" placeholder="请输入自行生成的应用私钥private" >{#$edit.private#}</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        public：
                    </label>
                    <div class="col-md-4">
                        <textarea cols="50" rows="6" class="form-control" name="public"  required lay-verify="required" placeholder="请输入开放平台支付宝公钥public" >{#$edit.public#}</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        状态：
                    </label>
                    <div class="col-md-4">
                        <select name="status" class="form-control flselect">
                            <option value="0" {#if condition="$edit.status eq '0'"#}selected="selected"{#/if#}>启用</option>
                            <option value="1" {#if condition="$edit.status eq '1'"#}selected="selected"{#/if#}>禁用</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4">
                         <input type="hidden" class="form-control" name="act" value="{#$act#}"/>
                         <input type="hidden" class="form-control" name="id" value="{#$edit.id#}"/>
                        <button type="submit" class="btn btn-success ">
                            &nbsp;
                            <span class="glyphicon glyphicon-save">
                            </span>
                            &nbsp;提交&nbsp;
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
        </div>
    </div>
        </div>
    </div>
</div>
{#include file="Public/footer" /#} 