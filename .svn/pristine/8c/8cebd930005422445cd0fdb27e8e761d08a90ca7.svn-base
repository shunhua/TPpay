{#include file="Public/header" /#}
{#include file="Public/top" /#}

<div id="main">
    <div class="container-fluid">
        <div class="row">
            {#include file="Public/left" /#}
            <div class="col-md-10">
                <div class="right-content">    <h3>
                        <span class="current">
                            {#$pageName#}
                    </h3>
                    
                    <form action="" method="post"  class="ajax-form">
                        <div class="set set0 table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <td colspan="10">
                                            <button class="btn btn-danger anniu delbtn" type="button" data-url="{#:U('Agent/delete')#}">删除</button>
                                            <button class="btn btn-success anniu addbtn" type="button" data-url="{#:U('Agent/add')#}">添加</button>
                                            <button class="btn btn-primary anniu flushbtn" type="button" data-url="#">刷新</button>
                                        </td>
                                    </tr>
                                    <tr class="info">
                                        <th style="width: 15px;"><input type="checkbox" name="mmAll" class="selectAllCheckbox"/></th>
                                        <th >代理名称</th>
                                        <th>达到金额</th>
                                        <th>费率</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {#if condition="$list"#}
                                        {#volist name="list" id="n" #}
                                    <tr id="tr{#$n.dlid#}" >
                                        <td><input type="checkbox" class="thisid checkbox" title="{#$n.dlid#}" name="thisid[]" value="{#$n.dlid#}"/></td>
                                        <td><a href="{#:U('Agent/edit',array('dlid'=>$n['dlid'],'p'=>$_GET['p']))#}">{#$n.dlname#}</a></td>
                                        <td>{#$n.money#}元</td>
                                        <td>{#$n.fl#}%</td>
                                        <td>
                                            <a href="{#:U('Agent/edit',array('id'=>$n['dlid'],'p'=>$_GET['p']))#}" class="layui-btn layui-btn-normal layui-btn-mini">编辑</a>
                                            <a href="javascript:;" data-id="{#$n.dlid#}" data-url="{#:U('Agent/delete',array('id'=>$n['dlid'],'p'=>$_GET['p']))#}" class="layui-btn layui-btn-danger layui-btn-mini ajax-delete">删除</a>
                                        </td>
                                    </tr>
                                        {#/volist#}
                                    {#else/#}
                                    <tr>
                                        <td colspan="10" align="center">暂无数据</td>
                                    </tr>
                                    {#/if#}
                                </tbody>
                            </table>
                            <div id="wypage">{#$page#}</div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{#include file="Public/footer" /#}